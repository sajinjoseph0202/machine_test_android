<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/trendingcard"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mainImg"
        android:layout_width="156dp"
        android:layout_height="109dp"

        android:scaleType="fitXY"
        app:srcCompat="@drawable/pic1" />
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginTop="6dp"
        android:text="SPICE WHOLE"
        android:textColor="@color/orange"
        android:textSize="9sp"
        android:lineSpacingExtra="8sp"
        />

    <TextView
        android:id="@+id/nameProduct"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="Garlic Granules 3-5.."
        android:textSize="14sp"
        android:textColor="@color/dark_green"
        android:lineSpacingExtra="-4sp"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/h22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost/Kg:"
            android:layout_weight="1"
            android:textColor="@color/green_3"
            android:textSize="10sp"
            android:lineSpacingExtra="8sp"
            />

        <TextView
            android:id="@+id/exw"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="EXW"
            android:gravity="end"
            android:textSize="10sp"
            android:textColor="@color/dark_green"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/h222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valid: "
            android:layout_weight="1"
            android:textColor="@color/green_3"
            android:textSize="10sp"
            android:lineSpacingExtra="8sp"
            />

        <TextView
            android:id="@+id/validDate"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text="29/9/2023"
            android:layout_marginTop="4dp"
            android:gravity="end"
            android:textSize="10sp"
            android:textColor="@color/dark_green"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/h24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Volume"
                android:layout_weight="1"
                android:textColor="@color/green_3"
                android:textSize="10sp"
                android:lineSpacingExtra="8sp"
                />
            <TextView
                android:id="@+id/volume"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="25000 KG"
                android:layout_weight="1"
                android:textColor="@color/dark_green"
                android:textSize="10sp"
                android:lineSpacingExtra="8sp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/certified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/certified" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/priceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD \n1000.00 \nTaxes &amp; Duties"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_semibold"
            android:textColor="@color/light_dark_green"
            android:textSize="12sp"
            android:lineSpacingExtra="2dp"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_right_square"/>

    </LinearLayout>

</LinearLayout>